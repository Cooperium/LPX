@model L.PX.Core.Leilao
@{
    ViewBag.Title = "TelaGerenciador";
}
<h2>
    TelaGerenciador</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{

    <h3>
        Contratante</h3>
    
    <fieldset>
        <legend>Dados do Leilão</legend>
        <div class="display-label">
            Identificador do leilão</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Id </div>
        <div class="display-label">
            Valor inicial</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.ValorInicial</div>
        <div class="display-label">
            Valor atual</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.ValorAtual </div>
        <div class="display-label">
            Número de lotes</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.NumeroDeLotes </div>
    </fieldset>
    
    <input type="submit" value="OK" />
    
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
    
}
